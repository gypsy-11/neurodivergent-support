---
export interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  priority?: boolean;
  sizes?: string;
}

const { 
  src, 
  alt, 
  width = 800, 
  height = 600, 
  class: className = "",
  priority = false,
  sizes = "(max-width: 768px) 100vw, 50vw"
} = Astro.props;

// Generate optimized image URLs
const imageUrl = new URL(src, Astro.url);
const webpUrl = new URL(src.replace(/\.(jpg|jpeg|png)$/, '.webp'), Astro.url);
---

<picture>
  <source 
    type="image/webp" 
    srcset={webpUrl.href}
    sizes={sizes}
  />
  <img 
    src={imageUrl.href}
    alt={alt}
    width={width}
    height={height}
    class={className}
    loading={priority ? "eager" : "lazy"}
    decoding="async"
    style="width: 100%; height: auto;"
  />
</picture>

<style>
  img {
    max-width: 100%;
    height: auto;
    display: block;
  }
</style>
